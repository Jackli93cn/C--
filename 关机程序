#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>

int main21()
{
	char input[20] = { 0 };
	system("shutdown -s -t 60");

again:
	printf("your computer will be close\n");
	scanf("%s", input);
	if (strcmp(input, "i am a pig") == 0)
	{
		system("shutdown -a");
	}
	else
	{
		goto again;
	}
	return 0;
}
